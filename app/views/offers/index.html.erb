  <div class="container">
  <div class="title-container text-center mt-16">
    <p>Please, select the following</p>
    <div class="select-buttons">
      <%# How to store input? %>
      <div class="btn btn-flat">Date</div>

      <div class="container">
        <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
          <h2>Pick a date</h2>

          <%= simple_form_for :search, method: "get" do |f| %>
            <%= f.input :starts_at, input_html: {id: "range_start"} %>
            <%= f.input :ends_at, input_html: {id: "range_end"} %>
            <%= f.button :submit, "Go", class: "btn btn-flat" %>
          <% end %>
        </div>
      </div>

      <div class="btn btn-flat">Area</div>
        <%# add search bar %>
        <%= form_tag offers_path, method: :get do %>

          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search area"
          %>
          <%= submit_tag "Search", class: "btn btn-flat" %>
        <% end %>
    </div>


    <div class="cards">
      <% @offers.each do |offer| %>
      <%= render "shared/card", offer: offer %>
      <% end %>
    </div>
</div>
  </div>
