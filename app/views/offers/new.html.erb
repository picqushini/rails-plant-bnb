<div class="container">
  <h1>Create a new plantkeeping offer</h1>

  <%= simple_form_for(@offer) do |f| %>
    <%= f.input :area, placeholder:"London"%>
    <%= f.input :price, placeholder:"15" %>
    <%= f.input :description %>
    <%= f.input :file, as: :file, label: "Upload image", required: true %>
    <%= f.submit %>
  <% end %>
</div>
